            id="ar-button" 
            slot="ar-button" 
            style="background-color: transparent; border-radius: 4px; border: none; position: absolute; bottom: 20px; right: 20px; text-align: right; ">
            <img src="images/ar_icon_red.png" width="50px"><br />BAÅžLAT
